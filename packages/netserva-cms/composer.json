{
    "name": "netserva/cms",
    "description": "Professional Laravel CMS with Filament 5 admin panel - standalone deployable",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "filament",
        "cms",
        "content-management",
        "blog",
        "pages"
    ],
    "authors": [
        {
            "name": "NetServa",
            "email": "info@netserva.com"
        }
    ],
    "homepage": "https://netserva.org",
    "support": {
        "issues": "https://github.com/netserva/monorepo/issues",
        "source": "https://github.com/netserva/monorepo"
    },
    "require": {
        "php": "^8.4",
        "laravel/framework": "^12.0",
        "filament/filament": "^5.0",
        "spatie/laravel-sluggable": "^3.6",
        "spatie/laravel-medialibrary": "^11.0",
        "spatie/schema-org": "^3.0"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "laravel/pint": "^1.13"
    },
    "suggest": {
        "netserva/core": "Enables enhanced settings management with database-backed configuration and CRUD UI"
    },
    "autoload": {
        "psr-4": {
            "NetServa\\Cms\\": "src/",
            "NetServa\\Cms\\Database\\Factories\\": "database/factories/",
            "NetServa\\Cms\\Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NetServa\\Cms\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "NetServa\\Cms\\NetServaCmsServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"echo '\\n\\033[32mNetServa CMS installed successfully!\\033[0m\\n';\"",
            "@php -r \"echo '\\033[33mRun: php artisan netserva-cms:install\\033[0m to complete setup.\\n\\n';\""
        ],
        "post-update-cmd": [
            "@php artisan filament:upgrade --no-interaction 2>/dev/null || true"
        ],
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
